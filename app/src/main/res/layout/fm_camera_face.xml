<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/toolBar_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:visibility="gone">

        <ImageView
                android:id="@+id/settings_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:padding="10dp"
                android:background="?selectableItemBackground"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:visibility="gone"/>

        <RelativeLayout
                android:id="@+id/face_toolBar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            <LinearLayout
                    android:id="@+id/backLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?selectableItemBackground"
                    android:gravity="center_vertical">
                <ImageView
                        android:id="@+id/backIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_marginLeft="10dp"/>

                <TextView
                        android:id="@+id/backTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:gravity="center"
                    android:lines="1"/>

            <TextView
                    android:id="@+id/face_hint_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请将面部对准基准框"
                    android:gravity="center"
                    android:textSize="27dp"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/main_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateTv"
                    android:layout_marginTop="5dp"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打印机状态："
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textSize="20dp"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/printer_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/status_tv"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.aaron.camera.CameraSurfaceView
                android:id="@+id/camera_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:id="@+id/hint_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

            <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="250dp">

                <TextView
                        android:id="@+id/frame_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"/>

                <ImageView
                        android:id="@+id/headIv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
                android:id="@+id/face_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/camera_surfaceview"
                android:visibility="gone">

            <TextView
                    android:id="@+id/info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp"
                    android:visibility="invisible"
                    android:textColor="#ffffff"/>

            <ImageView
                    android:id="@+id/flash"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flash"
                    android:text="补光灯"
                    android:textSize="24dp"
                    android:layout_alignLeft="@id/flash"
                    android:layout_alignRight="@id/flash"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

            <Button
                    android:id="@+id/take_picture"
                    android:text="拍摄"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40dp"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/face_status"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="未检测到人脸"
                    android:visibility="gone"
                    android:background="#44000000"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/main_item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/camera_surfaceview"
                android:gravity="center"
                android:visibility="gone">

            <RelativeLayout
                    android:id="@+id/typeFace_layout"
                    android:layout_width="582dp"
                    android:layout_height="207dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/typeFingerprint_layout">

                <ImageView
                        android:id="@+id/typeFace"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/typeFingerprint_layout"
                    android:layout_width="582dp"
                    android:layout_height="195dp"
                    android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                        android:id="@+id/typeFingerprint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/typeBarcode_layout"
                    android:layout_width="582dp"
                    android:layout_height="204dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/typeFingerprint_layout"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/typeBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="二维码核销"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
